<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
</head>

<body>
    <header class="jumbotron">
        <h1 class="text-center">@ViewBag.Category.Name</h1>
    </header>
    <a href="/">Home</a>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 border-right">
                <h1>Products</h1>
                @foreach(var x in ViewBag.CategoryProducts){
                    @foreach(var y in x.Associations){
                        <p>@y.Products.Name</p>
                    }
            }
            </div>
            <div class="col-sm-6">
                <h1>Add a Product</h1>
                @model Associations
                <form asp-action="AddProductAssociation" asp-controller="Home" method="post">
                    <label asp-for="ProductId">Product name:</label>
                    <span asp-validation-for="ProductId"></span>
                    <select asp-for='ProductId'>
                        @foreach(var x in @ViewBag.Products){
                        <option value='@x.ProductId'>@x.Name</option>
                        }
                    </select><br>
                    <span asp-validation-for="CategoryId"></span>
                    <input type="hidden" value="@ViewBag.Category.CategoryId" asp-for="CategoryId"><br>
                    <input value="add Association" type="submit">
                </form>
            </div>
        </div>
    </div>
    </table>
</body>

</html>