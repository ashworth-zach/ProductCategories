<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
</head>
 
<body>
    <header class="jumbotron"><h1 class="text-center"><a href="/">Products</a> | Categories</h1>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 border-right">
                <h1 class="text-center">New Category</h1>
                @model Categories
                <form asp-action="AddCategory" asp-controller="Home" method="post">
                    <span asp-validation-for="Name"></span>
                <label asp-for="Name">Name</label>
                <input asp-for="Name"><br>
                <input value="add Category" type="submit">
                </form>
            </div>
            <div class="col-sm-6">
                <h1 class="text-center">Existing Categories</h1>
                @foreach(var x in ViewBag.Categories)
                {
                    
                    <li><a href="/categories/@x.CategoryId">@x.Name</a> - @x.created_at</li>
                }
            </div>
        </div>
    </div>
</table>
</body>
</html>